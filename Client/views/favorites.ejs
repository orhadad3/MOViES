<%- include('partials/header') %>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-6 text-start">
                <h3 class="mb-0">Favorites</h3>
            </div>
            
            <div class="col-6 text-end">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" id="sort-button">
                    Sorted by: Default
                </button>
                <ul class="dropdown-menu" id="sort-list">
                    <li><a class="dropdown-item" id="sort-default" href="#">Default</a></li>
                    <li><a class="dropdown-item" id="sort-title" href="#">Title</a></li>
                    <li><a class="dropdown-item" id="sort-date" href="#">Release Date</a></li>
                    <li><a class="dropdown-item" id="sort-rating" href="#">Rating</a></li>
                </ul>
            </div>
        </div>
        <hr class="mb-4">

        <div class="d-flex justify-content-center my-3 d-none" id="spinner">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

        <div id="movies-container" class="row gy-3 gx-2 gx-md-3 gx-lg-4 gx-xl-5"></div>

        <div id="pagination-container" class="d-flex justify-content-center mt-3"></div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script type="module" src="/js/favorites.js"></script>
    </div>

<%- include('partials/footer') %>