<%- include('partials/header') %>

    <div class="container">
        <div class="input-group input-custom mb-5">
            <input type="text" id="search-movie" class="form-control" placeholder="Search Movies...">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
        </div>
        
        <div class="row align-items-center me-0 d-none" id="title-page">
            <div class="col-6 text-start">
                <h3 class="mb-0">Results for: <span class="text-break" id="titleSearch"></span></h3>
            </div>
            
            <div class="col-6 text-end px-0">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" id="sort-button">
                    Movies per page: All
                </button>
                <ul class="dropdown-menu" id="sort-list">
                    <li><a class="dropdown-item" id="page-all" href="#">All</a></li>
                    <li><a class="dropdown-item" id="page-4" href="#">4</a></li>
                    <li><a class="dropdown-item" id="page-8" href="#">8</a></li>
                    <li><a class="dropdown-item" id="page-16" href="#">16</a></li>
                </ul>
            </div>
            <hr class="mt-3">
        </div>

        <!-- Movies List Columns -->
        <div class="row gy-3 gx-2 gx-md-3 gx-lg-4 gx-xl-5" id="movies-container"></div>

        <nav id="pages-nav" class="d-none mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script type="module" src="/js/index.js"></script>

<%- include ('partials/footer') %>